#Türkçe klavye ve karakter ayarları)

    loadkeys trq
    setfont lat5-16

#Disk formatlama. "cfdisk" ile diskleri bölümlendirdiğinden emin ol.

    mkfs.ext4 /dev/sda1
    mkswap /dev/sda2

#Formatlanmış disk bölümlerini bağlama

    mount /dev/sda1 /mnt
    swapon /dev/sda2

#Temel sistem bileşenlerini indirme ve kurma. Bu adımdan önce internete bağlı olduğundan emin ol. "wifi-menu" kullanabilirsin.

    pacstrap -i /mnt base base-devel os-prober grub

    genfstab -L -p /mnt >> /mnt/etc/fstab
    arch-chroot /mnt

#Bilgisayarın adını koy.

    echo HERAKLES > /etc/hostname
    
    pacman -S networkmanager
    systemctl enable NetworkManager.service
    
    nano /etc/vconsole.conf
        KEYMAP=trq
        FONT=iso09.16
    
    nano /etc/locale.conf
        LANG=tr_TR.UTF-8
        
    nano /etc/timezone
        Europe/Istanbul
        
#Komuttan sonra çıkan satırlar arasında TR ile ilgili bölümü bul ve başında # sembolünü kaldır, kaydet.

    nano /etc/locale.gen
        .
        .
        .
        #tr_tr.UTF-8 UTF-8
        #tr_TR ISO-8859-9
        .
        .
        .
    
    locale-gen
    
    mkinitcpio -p linux
    grub-mkconfig -o /boot/grub/grub.cfg
    grub-install --recheck /dev/sda
    
#Root için parola oluştur.
    passwd root
    
    exit
    umount /mnt
    reboot
    
